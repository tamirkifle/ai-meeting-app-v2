{
  "manifest_version": 3,
  "name": "Live Meeting Transcription",
  "version": "1.0",
  "description": "Real-time audio transcription for meetings with AI-powered summarization",
  "permissions": [
    "tabCapture",
    "storage",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "ws://localhost:*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}

  